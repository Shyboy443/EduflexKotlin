<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/bg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:contentDescription="@string/cd_onb_background"
        android:importantForAccessibility="no"
        tools:src="@drawable/img2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/scrim"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/scrim_top_to_transparent"
        android:elevation="1dp"
        android:importantForAccessibility="no"
        app:layout_constraintTop_toTopOf="@id/bg"
        app:layout_constraintBottom_toBottomOf="@id/bg"
        app:layout_constraintStart_toStartOf="@id/bg"
        app:layout_constraintEnd_toEndOf="@id/bg"/>

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="24dp"
        android:paddingTop="48dp"
        android:gravity="center_horizontal"
        android:elevation="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <FrameLayout
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:background="@drawable/icon_circle"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:importantForAccessibility="no">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:src="@drawable/baseline_menu_book_24"
                android:contentDescription="@string/cd_icon_explore"
                android:importantForAccessibility="no"
                app:tint="@color/brand_secondary"/>
        </FrameLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/onb_explore_title"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            android:includeFontPadding="false"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:lineSpacingExtra="2dp"
            android:text="@string/onb_explore_desc"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:maxLines="5"
            android:includeFontPadding="false"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp"
        android:elevation="3dp"
        android:importantForAccessibility="no"
        app:layout_constraintBottom_toTopOf="@+id/nav_row"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <View android:layout_width="8dp" android:layout_height="8dp" android:background="@drawable/indicator_unselected" android:layout_marginEnd="8dp"/>
        <View android:layout_width="8dp" android:layout_height="8dp" android:background="@drawable/indicator_selected" android:layout_marginEnd="8dp"/>
        <View android:layout_width="8dp" android:layout_height="8dp" android:background="@drawable/indicator_unselected" android:layout_marginEnd="8dp"/>
        <View android:layout_width="8dp" android:layout_height="8dp" android:background="@drawable/indicator_unselected"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/nav_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginBottom="26dp"
        android:elevation="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/button_back_onboarding1"
            android:layout_width="112dp"
            android:layout_height="44dp"
            android:text="@string/onb_back"
            android:textAllCaps="false"
            android:textColor="@color/btn_back_text"
            android:background="@drawable/btn_back_outline"
            android:layout_marginEnd="12dp"/>

        <Button
            android:id="@+id/next_button"
            android:layout_width="112dp"
            android:layout_height="44dp"
            android:text="@string/onb_next"
            android:textAllCaps="false"
            android:textColor="@color/btn_next_text"
            android:background="@drawable/btn_next_primary"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
