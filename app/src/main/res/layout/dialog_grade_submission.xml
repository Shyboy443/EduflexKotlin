<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Student Name -->
    <TextView
        android:id="@+id/studentName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Student Name"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:layout_marginBottom="16dp" />

    <!-- Submission Content -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submission Content:"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:layout_marginBottom="8dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/submissionContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submission content will appear here..."
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:background="@drawable/rounded_background"
            android:padding="12dp" />

    </ScrollView>

    <!-- Grade Input -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Grade (0-100)"
        android:layout_marginBottom="16dp"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/gradeInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Feedback Input -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Feedback"
        android:layout_marginBottom="16dp"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/feedbackInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:lines="3"
            android:gravity="top" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- AI Suggest Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/aiSuggestButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AI Suggest Feedback"
        android:drawableStart="@drawable/ic_auto_awesome"
        style="@style/Widget.Material3.Button.OutlinedButton"
        app:cornerRadius="8dp"
        android:layout_gravity="end" />

</LinearLayout>