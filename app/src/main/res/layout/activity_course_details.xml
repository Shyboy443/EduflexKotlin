<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    tools:context=".CourseDetailsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="56dp"
        android:background="@color/background_light"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:background="@color/background_card">

                <ImageView
                    android:id="@+id/btn_back"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_back"
                    android:contentDescription="Back"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="4dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Course Details"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:gravity="center"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="40dp" />

            </LinearLayout>

        <!-- Certificate Download -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btn_download_certificate"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Download Certificate"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/role_button_background_selected"
                android:visibility="gone" />

        </LinearLayout>

            <!-- Course Hero Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/brand_primary">

                    <!-- Bookmark Button -->
                    <ImageView
                        android:id="@+id/btn_bookmark"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_alignParentEnd="true"
                        android:layout_margin="16dp"
                        android:src="@drawable/ic_bookmark_border"
                        android:background="@drawable/circular_background"
                        android:padding="6dp"
                        android:contentDescription="Bookmark"
                        android:clickable="true"
                        android:focusable="true" />

                    <!-- Course Title and Instructor -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/tv_course_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Advanced Mathematics"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="@color/background_white"
                            android:shadowColor="@color/text_primary"
                            android:shadowDx="1"
                            android:shadowDy="1"
                            android:shadowRadius="2" />

                        <TextView
                            android:id="@+id/tv_instructor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="By Dr. Nimal Perera"
                            android:textSize="14sp"
                            android:textColor="@color/background_white"
                            android:layout_marginTop="4dp"
                            android:shadowColor="@color/text_primary"
                            android:shadowDx="1"
                            android:shadowDy="1"
                            android:shadowRadius="2" />

                    </LinearLayout>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <!-- Progress Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your progress"
                    android:textSize="16sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ProgressBar
                        android:id="@+id/progress_bar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="0dp"
                        android:layout_height="8dp"
                        android:layout_weight="1"
                        android:progress="65"
                        android:progressTint="@color/primary_blue"
                        android:progressBackgroundTint="@color/progress_background" />

                    <TextView
                        android:id="@+id/tv_progress_percentage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="65%"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary_blue"
                        android:layout_marginStart="12dp" />

                </LinearLayout>

            </LinearLayout>

            <!-- About Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="About this course"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tv_course_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Master advanced mathematical concepts with practical examples and interactive exercises designed for Sri Lankan O/L and A/L students."
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:lineSpacingExtra="2dp" />

            </LinearLayout>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="24dp">

                <Button
                    android:id="@+id/btn_start_lesson"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="Start Lesson"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:background="@drawable/role_button_background_selected"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/btn_take_quiz"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="Take Quiz"
                    android:textColor="@color/primary_blue"
                    android:textStyle="bold"
                    android:background="@drawable/role_button_background"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

            <!-- Course Content Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Course Content"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="16dp" />

                <!-- Course Content List -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_course_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    tools:listitem="@layout/item_course_section" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/background_card"
        app:menu="@menu/student_bottom_navigation_menu"
        app:itemIconTint="@color/brand_primary"
        app:itemTextColor="@color/text_primary"
        app:elevation="8dp" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>