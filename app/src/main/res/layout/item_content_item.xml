<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_content_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/card_stroke">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <!-- Order Number -->
            <TextView
                android:id="@+id/tv_order"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:text="1"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@drawable/order_number_background"
                android:gravity="center"
                android:layout_marginEnd="8dp" />

            <!-- Content Type Icon -->
            <ImageView
                android:id="@+id/iv_content_type"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_text_fields"
                android:tint="@color/primary_blue"
                android:layout_marginEnd="8dp" />

            <!-- Title -->
            <TextView
                android:id="@+id/tv_content_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Introduction to Programming"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:maxLines="2"
                android:ellipsize="end" />

            <!-- Duration -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_schedule"
                    android:tint="@color/text_secondary"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:id="@+id/tv_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15 min"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary" />

            </LinearLayout>

        </LinearLayout>

        <!-- Description -->
        <TextView
            android:id="@+id/tv_content_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This section covers the basic concepts of programming including variables, data types, and control structures."
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginBottom="8dp" />

        <!-- Indicators -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <!-- Required Indicator -->
            <ImageView
                android:id="@+id/iv_required"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_star"
                android:tint="@color/warning_orange"
                android:layout_marginEnd="8dp"
                android:visibility="visible" />

            <!-- AI Generated Indicator -->
            <ImageView
                android:id="@+id/iv_ai_generated"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_smart_toy"
                android:tint="@color/accent_orange"
                android:layout_marginEnd="8dp"
                android:visibility="gone" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <!-- Content Type Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Text Content"
                android:textSize="10sp"
                android:textColor="@color/text_secondary"
                android:background="@drawable/content_type_label_background"
                android:padding="4dp" />

        </LinearLayout>

        <!-- Action Buttons (Initially Hidden) -->
        <LinearLayout
            android:id="@+id/layout_actions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:visibility="gone">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_edit"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Edit"
                android:textColor="@color/primary_blue"
                android:textSize="12sp"
                app:icon="@drawable/ic_edit"
                app:iconTint="@color/primary_blue"
                app:iconSize="14dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_move_up"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Up"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                app:icon="@drawable/ic_arrow_upward"
                app:iconTint="@color/text_secondary"
                app:iconSize="14dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_move_down"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Down"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                app:icon="@drawable/ic_arrow_downward"
                app:iconTint="@color/text_secondary"
                app:iconSize="14dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_delete"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Delete"
                android:textColor="@color/error_red"
                android:textSize="12sp"
                app:icon="@drawable/ic_delete"
                app:iconTint="@color/error_red"
                app:iconSize="14dp" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
