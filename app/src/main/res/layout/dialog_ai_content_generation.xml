<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- AI Icon -->
    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_smart_toy"
        android:tint="@color/accent_orange"
        android:layout_marginBottom="16dp" />

    <!-- Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="AI Content Generation"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <!-- Subject Input -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:boxStrokeColor="@color/primary_blue"
        app:hintTextColor="@color/primary_blue">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Subject (e.g., Mathematics, Science, Programming)"
            android:inputType="text"
            android:maxLines="1" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Topics Input -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:boxStrokeColor="@color/primary_blue"
        app:hintTextColor="@color/primary_blue">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_topics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Topics to cover (comma-separated)"
            android:inputType="textMultiLine"
            android:minLines="2"
            android:maxLines="4" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Learning Goals Input -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:boxStrokeColor="@color/primary_blue"
        app:hintTextColor="@color/primary_blue">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_learning_goals"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Learning goals (what students should achieve)"
            android:inputType="textMultiLine"
            android:minLines="2"
            android:maxLines="4" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Content Type Spinner -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Preferred Content Type"
        android:textSize="14sp"
        android:textColor="@color/text_secondary"
        android:layout_marginBottom="8dp" />

    <Spinner
        android:id="@+id/spinner_content_type"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/spinner_background"
        android:padding="12dp" />

    <!-- AI Features Info -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="@color/info_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="AI will generate:"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Structured lesson content\n• Learning objectives\n• Practice exercises\n• Assessment questions\n• Additional resources"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:lineSpacingExtra="2dp" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Warning -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Note: AI-generated content should be reviewed and customized before publishing."
        android:textSize="12sp"
        android:textColor="@color/warning_orange"
        android:textStyle="italic"
        android:gravity="center"
        android:layout_marginTop="8dp" />

</LinearLayout>
