<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@color/background_light">

    <!-- Logo -->
    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/ic_logo_colorful"
        android:contentDescription="EduFlex Logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Choose Your Theme"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/brand_ink"
        app:layout_constraintTop_toBottomOf="@id/iv_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Select your preferred theme for the best learning experience"
        android:textSize="16sp"
        android:textColor="@color/text_secondary"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Theme Options Container -->
    <LinearLayout
        android:id="@+id/themeOptionsContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tvSubtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Light Mode Option -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardLightMode"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="20dp"
                android:gravity="center_vertical">

                <!-- Light Mode Preview -->
                <androidx.cardview.widget.CardView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginEnd="20dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="12dp"
                            android:background="@color/brand_primary"
                            android:layout_marginBottom="4dp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="8dp"
                            android:background="@color/border_light"
                            android:layout_marginBottom="2dp" />

                        <View
                            android:layout_width="120dp"
                            android:layout_height="8dp"
                            android:background="@color/border_light"
                            android:layout_marginBottom="2dp" />

                        <View
                            android:layout_width="160dp"
                            android:layout_height="8dp"
                            android:background="@color/border_light" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Light Mode Info -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Light Mode"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/brand_ink" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Clean and bright interface"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary" />

                </LinearLayout>

                <!-- Selection Indicator -->
                <ImageView
                    android:id="@+id/ivLightModeSelected"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_check_circle"
                    android:visibility="gone"
                    app:tint="@color/brand_primary" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Dark Mode Option -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardDarkMode"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="20dp"
                android:gravity="center_vertical">

                <!-- Dark Mode Preview -->
                <androidx.cardview.widget.CardView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginEnd="20dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/background_surface">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="12dp"
                            android:background="@color/brand_primary"
                            android:layout_marginBottom="4dp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="8dp"
                            android:background="@color/border_medium"
                            android:layout_marginBottom="2dp" />

                        <View
                            android:layout_width="120dp"
                            android:layout_height="8dp"
                            android:background="@color/border_medium"
                            android:layout_marginBottom="2dp" />

                        <View
                            android:layout_width="160dp"
                            android:layout_height="8dp"
                            android:background="@color/border_medium" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Dark Mode Info -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dark Mode"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/brand_ink" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Easy on the eyes, perfect for low light"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary" />

                </LinearLayout>

                <!-- Selection Indicator -->
                <ImageView
                    android:id="@+id/ivDarkModeSelected"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_check_circle"
                    android:visibility="gone"
                    app:tint="@color/brand_primary" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <!-- Continue Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnContinue"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginTop="48dp"
        android:text="Continue"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:backgroundTint="@color/brand_primary"
        app:cornerRadius="12dp"
        app:layout_constraintTop_toBottomOf="@id/themeOptionsContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>