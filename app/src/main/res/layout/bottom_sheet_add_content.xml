<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/bottom_sheet_background">

    <!-- Handle -->
    <View
        android:layout_width="32dp"
        android:layout_height="4dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bottom_sheet_handle" />

    <!-- Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Weekly Content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <!-- Create Manually Option -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_create_manually"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="12dp"
        android:text="Create Manually"
        android:textColor="@color/primary_blue"
        android:textSize="16sp"
        android:gravity="start|center_vertical"
        app:backgroundTint="@android:color/white"
        app:strokeColor="@color/primary_blue"
        app:strokeWidth="2dp"
        app:cornerRadius="12dp"
        app:icon="@drawable/ic_edit"
        app:iconTint="@color/primary_blue"
        app:iconGravity="start"
        app:iconPadding="12dp" />

    <!-- Use AI Option -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_use_ai"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="12dp"
        android:text="Generate with AI"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:gravity="start|center_vertical"
        app:backgroundTint="@color/accent_orange"
        app:cornerRadius="12dp"
        app:icon="@drawable/ic_smart_toy"
        app:iconTint="@android:color/white"
        app:iconGravity="start"
        app:iconPadding="12dp" />

    <!-- Upload Files Option -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_upload_files"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="12dp"
        android:text="Upload Files"
        android:textColor="@color/success_green"
        android:textSize="16sp"
        android:gravity="start|center_vertical"
        app:backgroundTint="@android:color/white"
        app:strokeColor="@color/success_green"
        app:strokeWidth="2dp"
        app:cornerRadius="12dp"
        app:icon="@drawable/ic_upload"
        app:iconTint="@color/success_green"
        app:iconGravity="start"
        app:iconPadding="12dp" />

    <!-- Use Template Option -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_use_template"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="16dp"
        android:text="Use Template"
        android:textColor="@color/text_secondary"
        android:textSize="16sp"
        android:gravity="start|center_vertical"
        app:backgroundTint="@android:color/white"
        app:strokeColor="@color/text_secondary"
        app:strokeWidth="2dp"
        app:cornerRadius="12dp"
        app:icon="@drawable/ic_template"
        app:iconTint="@color/text_secondary"
        app:iconGravity="start"
        app:iconPadding="12dp" />

    <!-- Add Quiz Option -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_add_quiz"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="16dp"
        android:text="Add Quiz"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:gravity="start|center_vertical"
        app:backgroundTint="@color/primary_blue"
        app:cornerRadius="12dp"
        app:icon="@drawable/ic_quiz"
        app:iconTint="@android:color/white"
        app:iconGravity="start"
        app:iconPadding="12dp" />

    <!-- Description -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose how you'd like to create your weekly content. AI generation provides smart suggestions based on your course topic."
        android:textSize="14sp"
        android:textColor="@color/text_secondary"
        android:gravity="center"
        android:layout_marginTop="8dp" />

</LinearLayout>
