<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_lecture"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header with Status -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <!-- Status Indicator -->
            <View
                android:id="@+id/status_indicator"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@drawable/circle_shape"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸ”´ LIVE"
                android:textSize="12sp"
                android:textStyle="bold"
                tools:textColor="@android:color/holo_red_light" />

            <TextView
                android:id="@+id/tv_countdown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Starts in 15m 30s"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:background="@drawable/rounded_background"
                android:padding="6dp"
                tools:visibility="visible" />

        </LinearLayout>

        <!-- Lecture Title -->
        <TextView
            android:id="@+id/tv_lecture_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Advanced Android Development Techniques"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="4dp"
            android:maxLines="2"
            android:ellipsize="end" />

        <!-- Course Name -->
        <TextView
            android:id="@+id/tv_course_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Android Development Masterclass"
            android:textSize="14sp"
            android:textColor="@color/brand_primary"
            android:layout_marginBottom="4dp"
            android:maxLines="1"
            android:ellipsize="end" />

        <!-- Instructor -->
        <TextView
            android:id="@+id/tv_instructor_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="by Dr. John Smith"
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="8dp" />

        <!-- Description -->
        <TextView
            android:id="@+id/tv_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="In this session, we'll explore advanced concepts in Android development including custom views, performance optimization, and modern architecture patterns."
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="12dp"
            android:maxLines="2"
            android:ellipsize="end" />

        <!-- Lecture Details Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <!-- Date -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_calendar"
                    android:tint="@color/text_secondary"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:id="@+id/tv_lecture_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dec 25"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary" />

            </LinearLayout>

            <!-- Time -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_time"
                    android:tint="@color/text_secondary"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:id="@+id/tv_lecture_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="02:00 PM"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary" />

            </LinearLayout>

            <!-- Duration -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_timer"
                    android:tint="@color/text_secondary"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:id="@+id/tv_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="60 min"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary" />

            </LinearLayout>

        </LinearLayout>

        <!-- Participants Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_people"
                android:tint="@color/text_secondary"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tv_participant_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25/100"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:layout_marginEnd="8dp" />

            <ProgressBar
                android:id="@+id/progress_participants"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="4dp"
                android:layout_weight="1"
                android:progress="25"
                android:max="100"
                android:progressTint="@color/brand_primary"
                android:progressBackgroundTint="@color/background" />

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_reminder"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remind Me"
                android:textSize="12sp"
                android:layout_marginEnd="8dp"
                app:cornerRadius="8dp"
                app:strokeColor="@color/brand_primary"
                android:textColor="@color/brand_primary" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_join"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="JOIN NOW"
                android:textSize="12sp"
                android:backgroundTint="@color/brand_primary"
                app:cornerRadius="8dp" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
