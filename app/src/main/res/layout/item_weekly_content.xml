<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_weekly_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:strokeWidth="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/tv_week_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Week 1"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@drawable/week_number_background"
                android:padding="6dp"
                android:layout_marginEnd="12dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_content_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Introduction to Programming"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:maxLines="2"
                    android:ellipsize="end" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="4dp">

                    <ImageView
                        android:id="@+id/iv_publish_status"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_published"
                        android:layout_marginEnd="4dp" />

                    <TextView
                        android:id="@+id/tv_publish_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Published"
                        android:textSize="12sp"
                        android:textColor="@color/success_green" />

                    <ImageView
                        android:id="@+id/iv_ai_enhanced"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_smart_toy"
                        android:tint="@color/accent_orange"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="4dp"
                        android:visibility="gone" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <ProgressBar
                    android:id="@+id/progress_bar_completion"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:progress="75"
                    android:progressTint="@color/success_green"
                    android:progressBackgroundTint="@color/progress_background" />

                <TextView
                    android:id="@+id/tv_progress_percentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="75%"
                    android:textSize="10sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Description -->
        <TextView
            android:id="@+id/tv_content_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This week introduces students to the fundamental concepts of programming including variables, data types, and basic operations."
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:maxLines="3"
            android:ellipsize="end"
            android:layout_marginBottom="12dp" />

        <!-- Stats Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_schedule"
                    android:tint="@color/text_secondary"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:id="@+id/tv_estimated_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="60 min"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_library_add"
                    android:tint="@color/text_secondary"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:id="@+id/tv_content_items_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5 items"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_target"
                    android:tint="@color/text_secondary"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:id="@+id/tv_objectives_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3 objectives"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary" />

            </LinearLayout>

        </LinearLayout>

        <!-- Tags -->
        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chip_group_tags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:chipSpacing="4dp"
            app:lineSpacing="4dp">

            <!-- Sample chips will be added programmatically -->

        </com.google.android.material.chip.ChipGroup>

        <!-- Dates -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/tv_release_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Release: Oct 15, 2024"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:drawableStart="@drawable/ic_calendar"
                android:drawableTint="@color/text_secondary"
                android:drawablePadding="4dp"
                android:gravity="center_vertical" />

            <TextView
                android:id="@+id/tv_due_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Due: Oct 22, 2024"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:drawableStart="@drawable/ic_event"
                android:drawableTint="@color/text_secondary"
                android:drawablePadding="4dp"
                android:gravity="center_vertical" />

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_edit"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Edit"
                android:textColor="@color/primary_blue"
                app:icon="@drawable/ic_edit"
                app:iconTint="@color/primary_blue"
                app:iconSize="16dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_publish"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Publish"
                android:textColor="@color/success_green"
                app:icon="@drawable/ic_publish"
                app:iconTint="@color/success_green"
                app:iconSize="16dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_ai_enhance"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="AI Enhance"
                android:textColor="@color/accent_orange"
                app:icon="@drawable/ic_smart_toy"
                app:iconTint="@color/accent_orange"
                app:iconSize="16dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_analytics"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Analytics"
                android:textColor="@color/text_secondary"
                app:icon="@drawable/ic_analytics"
                app:iconTint="@color/text_secondary"
                app:iconSize="16dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_delete"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Delete"
                android:textColor="@color/error_red"
                app:icon="@drawable/ic_delete"
                app:iconTint="@color/error_red"
                app:iconSize="16dp" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
