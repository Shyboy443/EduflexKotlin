<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Bottom Navigation Text Styles -->
    <style name="BottomNavigationTextActive" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary_color</item>
    </style>

    <style name="BottomNavigationTextInactive" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">11sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <!-- Enhanced Card Style -->
    <style name="TeacherDashboardCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">6dp</item>
        <item name="cardBackgroundColor">@android:color/white</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <!-- Professional Button Style -->
    <style name="TeacherActionButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="backgroundTint">@color/primary_color</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:elevation">4dp</item>
    </style>
</resources>