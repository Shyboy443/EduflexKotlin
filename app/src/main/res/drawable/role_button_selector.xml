<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/role_button_background_selected" />
            <corners android:radius="8dp" />
            <stroke android:width="1dp" android:color="@color/role_button_background_selected" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/role_button_background" />
            <corners android:radius="8dp" />
            <stroke android:width="1dp" android:color="@color/border_light" />
        </shape>
    </item>
</selector>