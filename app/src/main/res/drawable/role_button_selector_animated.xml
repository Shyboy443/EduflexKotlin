<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/brand_primary_light">
    <item>
        <selector>
            <item android:state_selected="true">
                <shape android:shape="rectangle">
                    <solid android:color="@color/brand_primary" />
                    <corners android:radius="16dp" />
                    <stroke android:width="2dp" android:color="@color/brand_primary" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/role_button_background_unselected" />
                    <corners android:radius="16dp" />
                    <stroke android:width="2dp" android:color="@color/brand_primary_light" />
                </shape>
            </item>
        </selector>
    </item>
</ripple>